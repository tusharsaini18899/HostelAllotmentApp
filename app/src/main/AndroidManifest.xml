<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tusharsaini.app.allotment.hostel.hostelallotment">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            >

        </activity>
        <activity android:name=".PhoneAuthActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".SignUp"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" >

        </activity>
        <activity
            android:name=".ChangePassword"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:screenOrientation="portrait">


        </activity>
        <activity android:name=".SliderMainPage"
            android:screenOrientation="portrait">

        </activity>
        <activity android:name=".HostelType"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".SliderMainPage"
                />

        </activity>
        <activity android:name=".BoyHostelSingleRoom"
            android:screenOrientation="portrait"
            >
           <meta-data
               android:name="android.support.PARENT_ACTIVITY"
               android:value=".HostelType"
               />

        </activity>
        <activity android:name=".GirlHostelSingleRoom"
            android:screenOrientation="portrait"
            >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".HostelType"
                />
        </activity>
        <activity android:name=".GirlHostelDoubleRoom"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".HostelType"
                />
        </activity>

        <activity android:name=".BoyHostelDoubleRoom"
            android:screenOrientation="portrait"
            >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".HostelType"
                />
        </activity>

        <activity android:name=".HostelFacilities"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".SliderMainPage"
                />

        </activity>
        <activity android:name=".SplashScreen"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>


        </activity>
        <activity android:name=".Aboutus"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".SliderMainPage"
                />

        </activity>

    </application>

</manifest>